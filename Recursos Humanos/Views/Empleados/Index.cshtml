@model IEnumerable<Recursos_Humanos.Models.Empleados>

@{
    ViewBag.Title = "Empleados";
}

<h2>Empleados</h2>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">


@using (Html.BeginForm("Index", "Empleados", FormMethod.Get))
{
    <div class="container">
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
            @Html.ActionLink(" ", "Index", "Empleados", null, new { @class = "fas fa-redo-alt btn btn-primary", style = "margin-left: 85%" })
        </p>
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group">
                @Html.TextBox("busca", null, new { @class = "form-control", @placeholder = "Buscar empleado por Fecha" })
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>

}

<br />
<table class="table">
    <tr class="thead-dark">
        <th>
            @Html.DisplayNameFor(model => model.Codigo_Empleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_DE_Ingreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cargo1.Cargo1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamento1.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo_Empleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_DE_Ingreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cargo1.Cargo1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento1.Nombre)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "far fa-edit btn btn-success" }) |
                @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "fas fa-info-circle btn btn-primary" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "far fa-trash-alt  btn btn-danger" })
            </td>
        </tr>
    }

</table>

