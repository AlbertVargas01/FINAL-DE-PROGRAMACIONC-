<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Recursos Humanos</title>

    @Styles.Render("~/Content/vendor/fontawesome-free/css/all.min.css")
    @Styles.Render("~/Content/vendor/datatables/dataTables.bootstrap4.css")
    @Styles.Render("~/Content/css/sb-admin.css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body id="page-top">
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <a class="navbar-brand mr-1" href="index.html">Recursos Humanos</a>
        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>
    </nav>
    <div id="wrapper">



        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Mantenimientos</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    @Html.ActionLink("Empleados Activos", "Index", "Empleados", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Departamentos", "Index", "Departamentoes", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Cargos", "Index", "cargoes", null, new { @class = "dropdown-item" })
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Procesos</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    @Html.ActionLink("Nominas", "Index", "Nominas", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Salidas", "Index", "Salidas", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Licencias", "Index", "Licencias", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Permisos", "Index", "Permisoes", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Vacaciones", "Index", "Vacaciones", null, new { @class = "dropdown-item" })
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Informes</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    @Html.ActionLink("Empleados Inactivos", "Inactivo", "Empleados", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Informe Nomina", "NominaInforme", "Nominas", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Informe Permisos", "PermisosInforme", "Permisoes", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Informe Vacaciones", "VacacionesInforme", "Vacaciones", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Informe Licencias", "LicenciasInforme", "Licencias", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Informe Salidas", "SalidasInforme", "Salidas", null, new { @class = "dropdown-item" })
                </div>
            </li>

        </ul>

        <div id="content-wrapper">
            @RenderBody()


        </div>
    </div>


    @Scripts.Render("~/Content/vendor/jquery/jquery.min.js")
    @Scripts.Render("~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js")
    @Scripts.Render("~/Content/vendor/jquery-easing/jquery.easing.min.js")
    @Scripts.Render("~/Content/vendor/chart.js/Chart.min.js")
    @Scripts.Render("~/Content/vendor/datatables/jquery.dataTables.js")
    @Scripts.Render("~/Content/vendor/datatables/dataTables.bootstrap4.js")
    @Scripts.Render("~/Content/js/sb-admin.min.js")
    @Scripts.Render("~/Content/js/demo/datatables-demo.js")
    @Scripts.Render("~/Content/js/demo/chart-area-demo.js")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
